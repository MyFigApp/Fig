<!DOCTYPE html>
<html>
{include file='header.tmpl'}
<body>
	<div id="preloader">
		<div class="progress"></div>
	</div>
	<div class="layer">
		<div id="signin">
			<a class="logo" href="/">
				<img src="/img/logo.png">
			</a>
			<div class="panel">
			{if $logout}
				<div class="note">You've been logged out!</div>
			{else}
				<div class="note">Hi there, I'm Fig!</div>
			{/if}
				<a class="btn" href="{$url}">
					<img src="/img/btn_google_signin_light_normal_web@2x.png"/>
				</a>
			</div>
		</div>
	</div>

	<script type="text/javascript" src="/js/jquery-3.2.1.min.js"></script>
	<script type="text/javascript" src="/js/is_mobile.min.js"></script>
	<script type="text/javascript" src="/js/auth.js"></script>
</body>
</html>